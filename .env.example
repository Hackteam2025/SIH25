# FloatChat MVP Environment Configuration
# ======================================
# Copy this to .env and fill in your actual API keys

# REQUIRED: AI Model API Keys (at least one is required)
# ------------------------------------------------
GROQ_API_KEY=your-groq-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AGNO Agent Configuration
# ------------------------
GROQ_MODEL_NAME=llama-3.1-8b-instant
AGENT_API_PORT=8001

# MCP Tool Server Configuration
# -----------------------------
API_PORT=8000
API_HOST=0.0.0.0
MCP_SERVER_URL=http://localhost:8000

# DataOps Configuration
# --------------------
DATAOPS_API_PORT=8002

# Database Configuration (SQLite for MVP)
# --------------------------------------
DATABASE_URL=sqlite:///./floatchat_data.db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Voice AI Configuration
# ----------------------
VOICE_AI_ENABLED=true
TTS_SERVICE=openai
VOICE_MODEL=whisper-1

# Vector Database Configuration
# ----------------------------
CHROMA_PERSIST_DIRECTORY=./chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_SIMILARITY_THRESHOLD=0.7

# Frontend Configuration
# ---------------------
FRONTEND_PORT=8050
FRONTEND_HOST=0.0.0.0

# Development/Production Settings
# ------------------------------
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# Optional: Advanced Configuration
# --------------------------------
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
SESSION_TIMEOUT_MINUTES=30
MAX_CONVERSATION_HISTORY=50

# Scientific Data Configuration
# -----------------------------
ARGO_DATA_PATH=./data/argo
PROCESSED_DATA_PATH=./data/processed
NETCDF_CACHE_SIZE=1000

# Security (for production deployment)
# -----------------------------------
SECRET_KEY=your-secret-key-for-sessions
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0